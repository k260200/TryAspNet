@using UsersAndRewardsWeb.Models.ViewEntities;
@model RewardAndUsersEditViewModel

<form asp-action="EditRewardAndUsers">
    <div>
        <input type="hidden" asp-for="@Model.RewardView.ID">
    </div>
    <div>
        <input type="text" asp-for="@Model.RewardView.Title">
        <span id="error-text" asp-validation-for="@Model.RewardView.Title"></span>
    </div>
    <div>
        <textarea asp-for="@Model.RewardView.Description"> </textarea>>
        <span id="error-text" asp-validation-for="@Model.RewardView.Description"></span>
    </div>
    <div>
        <h5>Users:</h5>
    </div>
    <ul>
        @for (int i = 0; i < Model.AllUsers.Count; i++)
        {
            <li>
                <input type="checkbox" asp-for="@Model.AllUsers[i].Selected" />
                <label asp-for="@Model.AllUsers[i].Selected">@Model.AllUsers[i].Text</label>
                <input type="hidden" asp-for="@Model.AllUsers[i].Value" />
                <input type="hidden" asp-for="@Model.AllUsers[i].Text" />
            </li>
        }
    </ul>
    <button asp-action="Index"> Cancel </button>
    <button type="submit"> Ок </button>
</form>
